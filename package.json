{
  "name": "aily-generate-code",
  "publisher": "Kotei.AiQingmin",
  "displayName": "aily-generate-code",
  "icon": "images/code-aily.png",
  "description": "kotei aily code helper powered by AI",
  "version": "1.0.0",
  "aiKey": "",
  "repository": {
    "url": "https://github.com/xxx"
  },
  "engines": {
    "vscode": "^1.73.0"
  },
  "categories": [
    "Data Science",
    "Formatters",
    "Programming Languages",
    "Linters"
  ],
  "keywords": [
    "chatgpt",
    "gpt",
    "openai",
    "ai"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "menus": {
      "editor/context": [
        {
          "command": "aily.addToRepo",
          "group": "navigation",
          "when": "editorHasSelection"
        }
      ]
    },
    "keybindings": [
      {
        "command": "aily.generateCode",
        "key": "ctrl+shift+a",
        "mac": "cmd+shift+a",
        "when": "editorHasSelection"
      }
    ],
    "commands": [
      {
        "command": "aily.generateCode",
        "title": "Aily: 生成代码"
      },
      {
        "command": "aily.addToRepo",
        "title": "Aily: 代码入库"
      },
      {
        "command": "aily.queryCode",
        "title": "Aily: 检索代码"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "conversation-view-container",
          "title": "Aily",
          "icon": "images/code-ai.svg"
        }
      ]
    },
    "views": {
      "conversation-view-container": [
        {
          "type": "webview",
          "id": "aily.conversation.view",
          "name": "生成代码"
        }
      ]
    },
    "configuration": {
      "title": "Aily",
      "properties": {
        "aily.username": {
          "type": "string",
          "default": "我",
          "description": "显示在对话框中的名字",
          "order": 1
        },
        "aily.promptPrefix.generateCode": {
          "type": "string",
          "default": "请生成C++代码，满足如下要求",
          "description": "The prompt prefix used for generate code for the input content",
          "order": 2
        },
        "aily.llm.model": {
          "type": "string",
          "enum": [
            "gpt-4",
            "gpt-3.5-turbo"
          ],
          "default": "gpt-4",
          "order": 3,
          "enumItemLabels": [
            "Browser autologin - ChatGPT Plus GPT-4",
            "OpenAI API Key - gpt-3.5-turbo"
          ]
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "rimraf out && npm run esbuild-base -- --minify",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "build": "npm run -S esbuild-base -- --sourcemap",
    "watch": "npm run -S esbuild-base -- --sourcemap --watch",
    "fmt": "prettier --write \"src/**/*.ts\"&& npm run test -- --fix",
    "test": "eslint src --ext ts && tsc --noEmit"
  },
  "devDependencies": {
    "@types/glob": "^8.0.0",
    "@types/isomorphic-fetch": "^0.0.36",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/uuid": "^9.0.0",
    "@types/vscode": "^1.73.0",
    "@types/vscode-webview": "^1.57.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "@vscode/test-electron": "^2.2.0",
    "esbuild": "^0.15.18",
    "eslint": "^8.28.0",
    "glob": "^8.0.3",
    "mocha": "^10.1.0",
    "ts-loader": "^9.4.1",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "delay": "^5.0.0",
    "eventsource-parser": "^0.1.0",
    "gpt3-tokenizer": "^1.1.5",
    "isomorphic-fetch": "^3.0.0",
    "keyv": "^4.5.2",
    "openai": "^3.1.0",
    "p-timeout": "^6.1.1",
    "puppeteer": "^19.4.0",
    "puppeteer-extra": "^3.3.4",
    "puppeteer-extra-plugin-stealth": "^2.11.1",
    "puppeteer-extra-plugin-user-data-dir": "^2.4.0",
    "puppeteer-extra-plugin-user-preferences": "^2.4.0",
    "quick-lru": "^6.1.1",
    "remark": "^14.0.2",
    "strip-markdown": "^5.0.0",
    "uuid": "^9.0.0"
  },
  "resolutions": {
    "clone-deep": "^4.0.1"
  }
}